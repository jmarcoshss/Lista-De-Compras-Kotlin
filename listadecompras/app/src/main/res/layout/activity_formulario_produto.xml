<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_formulario_produto_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Nome"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_formulario_produto_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Quantidade"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/activity_formulario_produto_nome"
            app:layout_constraintStart_toStartOf="@id/activity_formulario_produto_nome"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_nome" />

        <Button
            android:id="@+id/activity_formulario_produto_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salvar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_unidade" />

        <EditText
            android:id="@+id/activity_formulario_produto_unidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="digite a unidade de medida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_quantidade" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>